# Configuration pour le serveur backend emploi
# Copiez ce fichier vers .env et remplissez vos valeurs

# Port du serveur
PORT=5000

# Base de données MongoDB
MONGO_URI=mongodb://localhost:27017/emploi_db

# Secrets JWT
JWT_SECRET=votre_jwt_secret_ici_changez_moi
JWT_REFRESH_SECRET=votre_refresh_secret_ici_changez_moi

# Configuration Email (Gmail)
EMAIL_USER=votre.email@gmail.com
EMAIL_PASS=votre_mot_de_passe_app

# Configuration de développement
NODE_ENV=development

